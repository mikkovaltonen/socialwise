rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // DEMO PROJECT - LIBERAL RULES
    // WARNING: These rules are NOT secure and should only be used for demo/testing
    
    // Allow full read access to all collections for everyone
    // Allow write access to all collections for authenticated users
    match /{document=**} {
      allow read: if true;  // Anyone can read anything
      allow write: if request.auth != null;  // Any logged-in user can write anything
    }
  }
}