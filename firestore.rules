rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // DEMO PROJECT - LIBERAL RULES FOR DEVELOPMENT
    // WARNING: These rules are NOT secure and should only be used for demo/testing

    // Finnish-named collections - allow authenticated users to read and write
    match /botin_ohjeet/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    match /kayttaja_preferenssit/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    match /jatkuva_parantaminen/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Allow all other collections for authenticated users
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}